@model SwimmerEntryServiceModel
@{
    ViewData["Title"] = "Edit Swimmer";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h1 class="heading-margin text-center">Swimmer Entry Form</h1>
        <form method="post">
            <div class="mb-3 form-group ">
                <label asp-for="FullName">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Full Name">
                <span asp-validation-for="FullName" class="small text-danger"></span>
            </div>
            <div class="mb-3 form-group ">
                <label asp-for="Age">Your Age</label>
                <input asp-for="Age" class="form-control" placeholder="">
                <span asp-validation-for="Age" class="small text-danger"></span>
            </div>
              <div class="mb-3 form-group ">
                <label asp-for="Address">Phone Number</label>
                <input asp-for="Address" class="form-control" placeholder="+359123456789">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <div class="mb-3 form-group ">
                <label asp-for="PhoneNumber">Address</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="SomeCity, StreetName str, Number">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="mb-3 form-group ">
                <label asp-for="ContactPersonName">Contact Person Name</label>
                <input asp-for="ContactPersonName" class="form-control" placeholder="Jane Doe">
                <span asp-validation-for="ContactPersonName" class="small text-danger"></span>
            </div>
            <div class="mb-3 form-group ">
                <label asp-for="RelationshipToSwimmer">Relationship To Swimmer</label>
                <input asp-for="RelationshipToSwimmer" class="form-control" placeholder="Mother, Sister, etc.">
                <span asp-validation-for="RelationshipToSwimmer" class="small text-danger"></span>
            </div>
             <div class="mb-3 form-group">
                <label asp-for="MedicalDatails">Important Medical Information</label>
                <textarea asp-for="MedicalDatails" rows="4" class="form-control" placeholder="Medical conditions, Alergies, etc. or None"></textarea>
                <span asp-validation-for="MedicalDatails" class="small text-danger"></span>
            </div> 
            <div class="mb-3 mt-3 form-group ">
                <label asp-for="SwimmingExperience">Swimming Experience</label>
                <textarea asp-for="SwimmingExperience" rows="4" class="form-control" placeholder="Share more about your swimming experience"></textarea>
                <span asp-validation-for="SwimmingExperience" class="small text-danger"></span>
            </div>

            <div class="mb-3 form-group ">
                <label asp-for="SquadId"></label>
                <select asp-for="SquadId" class=" form-control">
                    @foreach (var squad in Model.Squads)
                    {
                        <option value="@squad.Id">@squad.SquadName</option>
                    }
                </select>
            </div>
            <input class="btn btn-dark" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

