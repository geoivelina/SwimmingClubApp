@model IEnumerable<CoachListingServiceModel>

@{
    ViewBag.Title = "All Coaches";
}

<h1 class="text-center">All Coaches</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Full Name</th>
            <th scope="col">Email</th>
            <th scope="col">Job Position</th>
            <th scope="col">Squad</th>
            <th scope="col">Active</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coach in Model)
        {
            <tr>
                <td scope="col">@coach.Id</td>
                <td scope="col">@coach.FullName</td>
                <td scope="col">@coach.Email</td>
                <td scope="col">@coach.JobPosition</td>
                <td scope="col">@coach.Squad</td>
                <td scope="col">@(coach.IsAvtive == true ? "Yes" : "No")</td>

                <td scope="col">
                    <a asp-area="" asp-controller="About" asp-action="EditCoach" asp-route-id="@coach.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-area="" asp-controller="About" asp-action="DeleteCoach" asp-route-id="@coach.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>