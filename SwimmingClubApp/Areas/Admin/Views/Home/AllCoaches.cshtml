@model IEnumerable<CoachListingServiceModel>

@{
    ViewBag.Title = "All Coaches";
}

<h1 class="text-center">All Coaches</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th class="text-center">Id</th>
            <th >Full Name</th>
            <th >Email</th>
            <th >Job Position</th>
            <th >Squad</th>
            <th class="text-center">Active</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coach in Model)
        {
            <tr>
                <td class="text-center">@coach.Id</td>
                <td >@coach.FullName</td>
                <td >@coach.Email</td>
                <td >@coach.JobPosition</td>
                <td >@coach.Squad</td>
                <td class="text-center">@(coach.IsAvtive == true ? "Yes" : "No")</td>

                <td scope="col">
                    <a asp-area="" asp-controller="About" asp-action="EditCoach" asp-route-id="@coach.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-area="" asp-controller="About" asp-action="DeleteCoach" asp-route-id="@coach.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>