@model IEnumerable<ProductServiceModel>

@{
    ViewBag.Title = "All Products";
}
<h1> Add sizes to every product</h1>
<h1 class="text-center">All Products</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Active</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td scope="col">@product.Id</td>
                <td scope="col">@product.Name</td>
                <td scope="col">@product.ProductCategory.CategoryName</td>
                <td scope="col">@product.Price</td>
                <td scope="col">@(product.IsActive == true ? "Yes" : "No")</td>
                <td scope="col">
                    <a asp-area="" asp-controller="ClubShop" asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-area="" asp-controller="ClubShop" asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>