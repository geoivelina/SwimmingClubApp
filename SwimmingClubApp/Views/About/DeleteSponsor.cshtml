@model SponsorDetailsServiceModel

@{
    ViewData["Title"] = "Delete Sponsor";
}
<form asp-action="DeleteSponsor">
    <div class="offset-4 mt-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <img class="card-img-top" src="@Model.Logo" alt="">
            </div>
        </div>
        <div class="card mt-2" style="width: 18rem;  background-color:lightgray">
            <h3 class="text-center">Delete Sponsor</h3>
            &nbsp;
            <div style="font-size:14px;">
                <div class="card-body">
                    <p class="card-title"><b>Sponsore:</b> @Model.Name</p>
                    <p class="card-text"><b>Home Page Link:</b> @Model.HomePageLink</p>
                    <h5>Are you sure you want to delete sponsor <b>@Model.Name?</b></h5>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>