@model CoachDetailsServiceModel

@{
    ViewData["Title"] = "Delete Coach";
}
<form asp-action="DeleteCoach">
    <div class="offset-4 mt-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <img class="card-img-top" src="@Model.Image" alt="">
            </div>
        </div>
        <div class="card mt-2" style="width: 18rem;  background-color:lightgray">
            <h3 class="text-center">Delete Coach</h3>
            &nbsp;
            <div style="font-size:14px;">
                <div class="card-body">
                    <p class="card-title"><b>Coach Name:</b> @Model.FullName</p>
                    <p class="card-text"><b>Job Possition:</b> @Model.JobPosition</p>
                    <h5>Are you sure you want to delete Coach <b>@Model.FullName?</b></h5>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>