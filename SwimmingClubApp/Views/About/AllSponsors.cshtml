@model IEnumerable<SponsorDetailsServiceModel>

@*<h1 class="text-center">FIX THE LAYOUT!! FILL THEM IN TABLE!</h1>*@
<div class="row">
    <div class="container mt-4">
        @foreach (var sponsor in Model)
        {
            <div class="row mt-2">
                <div class="card" style="width: 16rem; background-color:gainsboro">
                    <div class="card-body">
                        <a href="@sponsor.HomePageLink">
                            <img class="card-img-top" src="@sponsor.Logo" alt="">
                        </a>
                        @if (this.User.IsInRole("Administrator"))
                        {
                            <div class="mt-3">
                                <a asp-area="" asp-controller="About" asp-action="EditSponsor" asp-route-id="@sponsor.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-area="" asp-controller="About" asp-action="DeleteSponsor" asp-route-id="@sponsor.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</div>

