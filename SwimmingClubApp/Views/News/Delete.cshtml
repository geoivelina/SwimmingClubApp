@model NewsDetailsServiceModel

@{
    ViewData["Title"] = "Delete News";
}
<form asp-action="Delete">
    <div class="offset-4 mt-4">
        <div class="card" style="width: 22rem;">
            <div class="card-body">
                <img class="card-img-top" src="@Model.Image" alt="">
            </div>
        </div>
        <div class="card mt-2" style="width: 22rem;  background-color:lightgray">
            <h3 class="text-center">Delete News</h3>
            &nbsp;
            <div style="font-size:14px;">
                <div class="card-body">
                    <p class="card-title"><b>News Title:</b> @Model.Title</p>
                    <p class="card-text"><b>News Description:</b> @Model.Desctioption</p>
                    <p class="card-text"><b>Created On:</b> @Model.DateCreated</p>
                    <h5>Are you sure you want to delete the following news: <b>@Model.Title?</b></h5>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
