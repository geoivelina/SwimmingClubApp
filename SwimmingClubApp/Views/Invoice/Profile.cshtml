@model List<InvoiceProfileViewModel>

<h1 class="text-center">My Invoices</h1>
<table class="table table-dark">
    <thead>
        <tr class="row text-center font-weight-bold">
            <th class="col-md-2">Invoice Number</th>
            <th class="col-md-4">Issued On</th>
            <th class="col-md-2">Total Sum</th>
            <th class="col-md-4">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr class="row">
                <td class="col-md-2 text-center">@invoice.Id</td>
                <td class="col-md-4 text-center">@invoice.IssuedOn.ToString("dd/MM/yy")</td>
                <td class="col-md-2 text-center font-weight-bold" style="color:crimson">@invoice.TotalSum.ToString("f2")</td>
                <td class="col-md-4 text-center">
                    <a asp-area="" asp-controller="Invoice" asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>