@model ProductFormModel

< class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <h1 class="heading-margin text-center">@ViewBag.Title</h1>
        @*   <h1 class="heading-margin text-center">HOW TO BIND MULTIPLE CHECKBOX??</h1>*@
    <form method="post">
        <div class="mb-3 form-group ">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" class="form-control" placeholder="Product Name">
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="mb-3 form-group ">
            <label asp-for="Image">Image URL</label>
            <input asp-for="Image" class="form-control" placeholder="">
            <span asp-validation-for="Image" class="small text-danger"></span>
        </div>
        <div class="mb-3 form-group ">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" placeholder="Jane Doe">
            <span asp-validation-for="Price" class="small text-danger"></span>
        </div>

        <div class="mb-3 form-group ">
            <label asp-for="ProductCategoryId"></label>
            <select asp-for="ProductCategoryId" class=" form-control">
                    @foreach (var category in Model.ProductCategories)
                    {
                    <option value="@category.Id">@category.Name</option>
                    }
            </select>
        </div>
        <div class="mb-3 form-group ">
            <label asp-for="SizesList">Size Options</label>
        </div>
        <div class="mb-3 form-group" style="">
                @foreach (var size in Model.SizesList)
                {
                <div class="form-check form-check-inline">
                    <input class="form-check-input"
                       type="checkbox"
                       value="@size.Id"
                       name="SizesList"
                       id="checkbox_@size.Id"
                       checked="@size.IsChecked">
                    <label class="form-check-label" for="checkbox_@size.Id">
                            @size.SizeDescription
                    </label>
                </div>
                }
            <span asp-validation-for="SizesList" class="small text-danger"></span>
        </div>
        <input class="btn btn-dark" type="submit" value="Save" />
    </form>
</div>
